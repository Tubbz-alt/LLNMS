<?xml version="1.0"?>

<!-- Top-Level Parent Node -->
<llnms-asset>

    <!-- Name of the asset -->
    <hostname>laptop</hostname>
    
    <!-- Addresses of the system -->
    <addresses>

        <!-- Local IP4 Address -->
        <address ip-type="ip4" value="192.168.0.5" >

            <!-- Remote access connection information -->
            <remote-access configured="true" 
                           remote-driver="llnms-ssh-remote-connector">
                
                <!-- SSH Remote Driver Configuration Options -->
                <remote-driver name="llnms-ssh-remote-connector">
                    
                    <!-- Required authentication for access -->
                    <login  username="marvin" />
            
                </remote-driver>

            </remote-access>

        </address>

    </addresses>

    <!-- Asset Description -->
    <description>Google DNS</description>
  
    <!-- List of supported scanners -->
    <scanners>
    
        <!-- Ping Scanner -->
        <scanner>
            
            <!-- ID of the scanner -->
            <id>ping-scanner</id>
    
        </scanner>
    </scanners>
</llnms-asset>
